<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <View
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/showstatus"
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_marginTop="15dp"


        android:layout_height="1dp"
        />

    <TextView
        android:id="@+id/taptochat"
        android:layout_width="127dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:text="taptochat"
        android:textSize="19dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/showname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/showname"
        app:layout_constraintTop_toBottomOf="@+id/showname" />

    <TextView
        android:id="@+id/showname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"


        android:layout_marginTop="16dp"
        android:text="your name display here"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/viewsetuserprofilepic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:text="show status here"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="@+id/showname"
        app:layout_constraintTop_toBottomOf="@+id/showname" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/viewsetuserprofilepic"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />


